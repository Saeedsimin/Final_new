<h1>Listing Doctors</h1>

<table>
  <thead>
    <tr>
<th>id</th>
      <th>Doctornum</th>
      <th>Address</th>
      <th>Speciality</th>
      <th>Name</th>
      <th>Family</th>
      <th>Gender</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
<td><%= doctor.id %></td>
        <td><%= doctor.doctorNum %></td>
        <td><%= doctor.address %></td>
        <td><%= doctor.speciality %></td>
        <td><%= doctor.name %></td>
        <td><%= doctor.family %></td>
        <td><%= doctor.gender %></td>
        <td><%= doctor.phone %></td>
        <td><%= link_to 'Show', doctor %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
        <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

